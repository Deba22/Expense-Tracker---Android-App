<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/headertext"
        android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Select Currency"
            android:textColor="#04040C"
        android:textSize="18sp"
        android:textStyle="normal"/>
     <ImageView
                    android:id="@+id/closebutton"
  android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
         android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:tint="#04040C"
                    android:src="@drawable/outline_close_24"
                    android:contentDescription="close">
                </ImageView>
   
        </RelativeLayout>
     <View android:id="@+id/line"  
        android:layout_width="match_parent" 
        android:layout_height="1dp"
        android:background="#e2e2e2"/>
     <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
         android:orientation="horizontal"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="13dp"
          >
	  <TextView
                android:id="@+id/rupeebtn"
            android:textSize="19sp"
            android:textColor="@android:color/white"
               android:layout_weight="1"
            android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="45dp"
             android:background="@drawable/curved_pieselected"/>
             <TextView
                android:id="@+id/dollarbtn"
                android:layout_weight="1"
             android:textSize="19sp"
            android:textColor="#204060"
                    android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/rect_notselected" />
       <TextView
                android:id="@+id/poundbtn"
               android:layout_weight="1"
             android:textSize="19sp"
             android:textColor="#204060"
                    android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/rect_notselected"/>
           <TextView
                android:id="@+id/eurobtn"
                android:layout_weight="1"
             android:textSize="19sp"
             android:textColor="#204060"
                   android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/rect_notselected"/>
           <TextView
                android:id="@+id/yenbtn"
               android:layout_weight="1"
             android:textSize="19sp"
             android:textColor="#204060"
                    android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="45dp"  
                android:background="@drawable/curved_barnotselected" />
            </LinearLayout>
    <RelativeLayout 
        android:layout_marginTop="13dp"
          android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <TextView
            android:id="@+id/moresettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find all available currencies in "
            android:textColor="#04040C"
        android:textSize="15sp"
       />
         <TextView
            android:id="@+id/mainsetting"
            android:layout_toRightOf="@+id/moresettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
            android:textColor="#204060"
        android:textSize="15sp"
       />
        <Button 
            android:id="@+id/savecurrencybutton"
            android:layout_below="@+id/moresettings"
            android:layout_centerHorizontal="true"
              android:textAllCaps="false"
            android:text="Save"
            android:backgroundTint="#efbe5d"
            android:tint="@android:color/white"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
            android:layout_width="300dp">
        </Button>
        </RelativeLayout>
</LinearLayout>