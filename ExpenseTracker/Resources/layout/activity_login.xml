<?xml version="1.0" encoding="utf-8" ?> 
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
  
        
              <TextView
        android:id="@+id/MainTagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:textSize="52sp"
            android:fontFamily="serif"
            android:textColor="#204060"
        android:text="Get your money under control"/>
             <TextView
        android:id="@+id/NotMainTagline"
             android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="#8c8c8c"
        android:fontFamily="sans-serif-condensed"
              android:textSize="22sp"
        android:text="Manage your expenses seamlessly. "/>
          <ProgressBar
   android:id="@+id/progressBar"
   android:layout_width="wrap_content"
      
   android:layout_height="wrap_content"
        android:visibility="invisible"
   android:layout_centerHorizontal="true" />           
     
    
    <android.support.design.button.MaterialButton android:id="@+id/googlebutton"
        android:layout_height="60dp"
        android:text="Log in with Google"
        android:textAllCaps="false"
         android:layout_marginHorizontal="20dp"
       
          android:layout_marginBottom="20dp"
        app:backgroundTint="#EA4335"
    app:cornerRadius="18dp"
    app:strokeColor="#EA4335"
             app:iconPadding="20dp"
        app:iconGravity="textStart"
        app:icon="@drawable/googleicon"
    app:strokeWidth="2dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        >
        <View
            android:layout_toLeftOf="@+id/ortext"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="2dp"
            android:background="#e6e6e6"/>
         <TextView
          
        android:id="@+id/ortext"
            android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textColor="#cccccc"
       android:text="OR "/>
       <View
            android:layout_toRightOf="@+id/ortext"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
             android:layout_marginLeft="10dp"
            android:background="#e6e6e6"/>
        </RelativeLayout>
   <android.support.design.button.MaterialButton
        android:id="@+id/facebookbutton"
       android:layout_height="60dp"
         android:textColor="@android:color/white"
android:layout_marginTop="20dp"
          android:textAllCaps="false"
        android:text="Log in with Facebook"
        app:iconPadding="20dp"
         android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
         app:backgroundTint="#4267B2"
    app:cornerRadius="18dp"
         app:iconGravity="textStart"
        app:icon="@drawable/facebookicon"
    app:strokeColor="#4267B2"
    app:strokeWidth="2dp"
        />
   <com.facebook.login.widget.LoginButton
         android:layout_height="60dp"
        android:id="@+id/fb_dummybuttton"
        android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_marginHorizontal="20dp"
        />
</LinearLayout>