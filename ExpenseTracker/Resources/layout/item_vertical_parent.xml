<?xml version="1.0" encoding="utf-8" ?> 
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
     app:cardCornerRadius="0dp"
      app:cardBackgroundColor="#ecf2f9"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
        android:id="@+id/categoryicon"
         android:paddingLeft="6dp"
          android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/parentitemname"
            android:layout_toRightOf="@+id/categoryicon"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
             android:textColor="#204060"
              android:paddingTop="15dp"
            android:text="test"
            android:paddingLeft="10dp"
           />
        <TextView
            android:id="@+id/parentitemamount"
               android:text="test1"
                    android:paddingTop="15dp"
            android:layout_toLeftOf="@+id/expandarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#204060"
           android:textSize="18sp"
             android:paddingLeft="16dp"
            android:paddingRight="16dp"
           />
        <ImageButton
            android:id="@+id/expandarrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:background="@null"
            android:tint="#04040C"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_expand_more_24"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/dummyview"
            android:layout_below="@+id/parentitemname"
            android:background="#ecf2f9"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <View
            android:layout_below="@+id/dummyview"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="6dp" />
    </RelativeLayout>
   
</android.support.v7.widget.CardView>