<?xml version="1.0" encoding="utf-8" ?> 
        <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     app:cardCornerRadius="0dp"
      app:cardBackgroundColor="#ecf2f9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/childdescname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="option1"
             android:textColor="#707070"
               android:textSize="18sp"
            android:paddingLeft="6dp"
            />
        <!-- <TextView
            android:id="@+id/ExpenseIdHidden"
            android:layout_toRightOf="@+id/childdescname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="option2"
            android:visibility="gone"
             android:textColor="#8c8c8c"
               android:textSize="18sp"
            android:paddingLeft="6dp"
            android:paddingBottom="16dp"/>-->
         <ImageView
            android:id="@+id/deleteicon"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/childdescname"
             android:background="@null"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
              android:paddingRight="6dp"
            android:tint="#204060"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:layout_height="wrap_content"/>
         <ImageButton
            android:id="@+id/editicon"
            android:layout_toLeftOf="@+id/deleteicon"
             android:layout_below="@+id/childdescname"
             android:background="@null"
            android:tint="#204060"
             android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_create_24"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/childdate"
            android:layout_below="@+id/childdescname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
             android:textColor="#707070"
               android:textSize="15sp"
            android:paddingLeft="6dp"
            android:paddingBottom="16dp"/>
       <View
            android:layout_below="@+id/childdate"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="6dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>